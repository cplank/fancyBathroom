{{!-- Populate the page with all posts --}}

<div class="container-fluid">
    <div class="fav-icon float-left animated heartBeat delay-1s" title="Order by Favorites">

        <img id="sort-by-fav" src="/images/favIcon.png" style="width:90px;">

    </div>
</div>

{{!-- Populate page with all images in database --}} 
<div class="container" id="feed-container">
    <div class="card-columns ">
        {{#if loggedIn}}

        {{#each images}}

        {{> feed/posts-block this}}
        {{/each}}

        {{else}}
        {{#each images}}
        {{> feed/feed-block this}}

        {{/each}}
        {{/if}}
    </div>
</div>




