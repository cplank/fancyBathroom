    <title>Instapotty</title>

    
</head>

<body>
    {{!-- NAVBAR START --}}
    <nav class="d-flex justify-content-between navbar navbar-expand-lg navbar-dark bg-dark ">
        {{!-- This div groups navbar-brand with the search form --}}
        <div class="row" style="width: 100%;"> 
            <div class="col-9">
                <div class="row">
                    <a class="navbar-brand" href="/">Instapotty</a>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="searchTerm">
                        <button class="btn btn-outline-success my-2 my-sm-0" id="searchBtn">Search by username/tags</button>
                    </form>
                </div>
            </div>
            <div class="col-3">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
                        </li>
                        {{!-- Hidden until User is logged in this should appear with links to all user posts, etc. --}}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="account" role="button" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/username/favorited" id="my-favs">My Favorites</a>
                                <a class="dropdown-item" href="/username/posts" id="my-posts">My Posts</a>
                                <a class="dropdown-item" href="#">Logout</a>
                            </div>
                        </li>
                        {{!-- This should be replaced by the accounts when user is logged in --}}
                        <li class="nav-item">
                            <li><div class="g-signin2" data-onsuccess="onSignIn"></div></li>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    {{!-- NAVBAR END --}}
    
    {{!-- Feed area --}}
    <div class="container">

    {{!-- Dynamically generated body element --}}
    {{{body}}}

    </div>

    {{!-- GOOGLE MAP AND INFO-WINDOW PIN THAT WILL GO INSIDE MODAL  --}}
     <!-- Map div -->
    <div id="map"></div>
    <!-- Place info content -->
    <div id="infowindow-content">
        <img src="" width="16" height="16" id="place-icon">
        <div id="place-name" class="title"></div><br>
        <div id="place-url"></div>
    </div>

    {{!-- Static files --}}
    <script src="js/interactions.js" type="text/javascript"></script>
    <script src="js/ajax_calls.js" type="text/javascript"></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

